@code {
    [Parameter]
    public ProductModel Product { get; set; }
}

<div class="col-12 col-md-3">
    <div class="card">
        <div class="card-header bg-success text-white text-uppercase">
            <i class="fa fa-heart"></i> Top product
        </div>
        <a href="/productdetail/@Product.Id"><img class="img-fluid border-0" src="images/product/@Product.ImageFile" alt="Card image cap"></a>
        <div class="card-body">
            <h4 class="card-title text-center">
                <a href="/productdetail/@Product.Id" title="View Product">@Product.Name</a>
            </h4>
            <div class="row">
                <div class="col">
                    <p class="btn btn-danger btn-block">@Product.Price $</p>
                </div>
                <div class="col">
                    <a href="/productdetail/@Product.Id" class="btn btn-success btn-block">View</a>
                </div>
            </div>
        </div>
    </div>
</div>
